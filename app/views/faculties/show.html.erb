<div style="text-align: center">
  <h1 style="font-size: 2em;margin: 1em 0;">
    <%=link_to @faculty.name, root_path %>
  </h1>
  <% @courses.each do |c| %>
    <%= link_to groups_path(c) do %>
      <h1 class="ui raised segment ui huge header"><%= c.name %></h1>
    <% end %>
  <% end %>
</div>

